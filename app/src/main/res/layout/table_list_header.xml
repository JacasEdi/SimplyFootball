<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:weightSum="15.9" >

    <TextView
        android:id="@+id/tv_position_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1.4"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:maxLines="1"
        android:text="Pos" />

    <TextView
        android:id="@+id/tv_team_name_table_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:maxLines="1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:text="Team" />

    <TextView
        android:id="@+id/tv_matches_played_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textAlignment="center"
        android:maxLines="1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:text="P" />

    <TextView
        android:id="@+id/tv_wins_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textAlignment="center"
        android:maxLines="1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:text="W" />

    <TextView
        android:id="@+id/tv_draws_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textAlignment="center"
        android:maxLines="1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:text="D" />

    <TextView
        android:id="@+id/tv_losses_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textAlignment="center"
        android:maxLines="1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:text="L" />

    <TextView
        android:id="@+id/tv_goals_scored_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textAlignment="center"
        android:maxLines="1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:text="F" />

    <TextView
        android:id="@+id/tv_goals_conceded_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textAlignment="center"
        android:maxLines="1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:text="A" />

    <TextView
        android:id="@+id/tv_goal_difference_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textAlignment="center"
        android:maxLines="1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:text="GD" />

    <TextView
        android:id="@+id/tv_points_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:maxLines="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:text="Pts" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jacek.simplyfootball">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_register_activity" />

        <service
            android:name=".services.MyService"
            android:exported="false" />

        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FixturesActivity"
            android:label="@string/title_activity_fixtures" />
        <activity
            android:name=".MatchReportActivity"
            android:label="@string/title_activity_match_report" />
        <activity
            android:name=".LeagueTableActivity"
            android:label="@string/title_activity_league_table" />
        <activity
            android:name=".PlayersActivity"
            android:label="@string/title_activity_players" />
        <activity
            android:name=".UpdateDetailsActivity"
            android:label="@string/title_update_details_activity" />
        <activity
            android:name=".NewsActivity"
            android:label="@string/title_news_activity" />
    </application>

</manifest>